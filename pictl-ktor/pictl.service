[Unit]
Description=Control Pi Audio Multiroom Service (pictl)
After=network.target

[Service]
Environment="KTOR_ENV=pi"
Environment="SLIMSERVER_HOST={RASPBERRY_IP}"
Environment="LOG_LEVEL_APP=WARN"
ExecStart=java -Dktor.application.modules.0=org.unividuell.pictl.server.PictlApplicationKt.piCtl -Dktor.application.modules.1=org.unividuell.pictl.server.ModulesKt.hardwareModule -jar /home/pi/pictl.jar
Restart=always
User=pi
PIDFile=/run/pictl.pid

[Install]
WantedBy=multi-user.target
